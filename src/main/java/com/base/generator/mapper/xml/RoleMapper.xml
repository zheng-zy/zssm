<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.base.generator.dao.RoleMapper">
	<resultMap id="BaseResultMap" type="com.base.generator.entity.Role">
		<result column="id" property="id" jdbcType="INTEGER" />
		<result column="name" property="name" jdbcType="VARCHAR" />
		<result column="sign" property="sign" jdbcType="VARCHAR" />
		<result column="desc" property="desc" jdbcType="VARCHAR" />
	</resultMap>

	<select id="getRolesByUserId" parameterType="int" resultMap="BaseResultMap">
		SELECT c.`id`, c.`name`, c.`sign`, c.`desc` FROM t_user a LEFT JOIN
		t_user_role b ON a.`id` = b.`userId` INNER JOIN t_role c ON b.`roleId`
		= c.`id` WHERE a.`id` = #{id}
	</select>

	<insert id="insert" parameterType="com.base.generator.entity.Role">
		insert into t_role (id, name, sign,
		desc)
		values (#{id,jdbcType=INTEGER}, #{name,jdbcType=VARCHAR},
		#{sign,jdbcType=VARCHAR},
		#{desc,jdbcType=VARCHAR})
	</insert>
	<insert id="insertSelective" parameterType="com.base.generator.entity.Role">
		insert into t_role
		<trim prefix="(" suffix=")" suffixOverrides=",">
			<if test="id != null">
				id,
			</if>
			<if test="name != null">
				name,
			</if>
			<if test="sign != null">
				sign,
			</if>
			<if test="desc != null">
				desc,
			</if>
		</trim>
		<trim prefix="values (" suffix=")" suffixOverrides=",">
			<if test="id != null">
				#{id,jdbcType=INTEGER},
			</if>
			<if test="name != null">
				#{name,jdbcType=VARCHAR},
			</if>
			<if test="sign != null">
				#{sign,jdbcType=VARCHAR},
			</if>
			<if test="desc != null">
				#{desc,jdbcType=VARCHAR},
			</if>
		</trim>
	</insert>
</mapper>